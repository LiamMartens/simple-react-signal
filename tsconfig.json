{
  "compilerOptions": {
    "outDir": "lib",
    "declaration": true,
    "module": "Node16",
    "strict": true,
    "strictNullChecks": true,
    "noImplicitAny": true,
    "target": "ES2020",
    "moduleResolution": "Node16",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true
  },
  "include": ["src"],
  "exclude": [
    "node_modules"
  ]
}